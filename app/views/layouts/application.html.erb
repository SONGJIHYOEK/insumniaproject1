<!DOCTYPE html>
<html>
  <head>
    <title>Postapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">내 홈페이지</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
                <li class="nav-item"><%= link_to '블로그', posts_path, class: "nav-link" %></li>
              <% if user_signed_in? %>
                <li class="nav-item nav-link"><%= current_user.email  %></li>
                <li class="nav-item"><%= link_to '로그아웃', destroy_user_session_path, method: :delete, class: "nav-link" %> </li>
              <% else %>
                <li class="nav-item"><%= link_to '회원 가입', new_user_registration_path, class: "nav-link" %></li>
                <li class="nav-item"><%= link_to '로그인', new_user_session_path,class: "nav-link" %></li>
              <% end %>
          </ul>
        </div>
      </div>
    </nav>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>


    <%= yield %>
  </body>
</html>

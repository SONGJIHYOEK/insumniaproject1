<h1>New Users</h1>

<div class="container">
    <%= form_with(model: @user, local: true) do |form| %>
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <%= form.email_field :email, class:"form-control", id:"exampleInputEmail1" %>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <%= form.password_field :password, class:"form-control", id:"exampleInputPassword1"%>
      <label for="exampleInputPassword1">Password confirmation</label>
      <%= form.password_field :password2, class:"form-control", id:"exampleInputPassword1"%>
    </div>
    <div class="form-group">

    </div>
    <button type="submit" class="btn btn-primary"><% form.submit %>sign up</button>
  <% end %>
</div>
